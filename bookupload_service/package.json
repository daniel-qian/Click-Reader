{
  "name": "epub-extractor-service",
  "version": "1.0.0",
  "description": "EPUB parsing service for Click-Reader",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test.js",
    "docker:build": "docker build -t epub-extractor-service .",
    "docker:run": "docker run -d --name epub-extractor-service -p 8082:8082 --env-file .env epub-extractor-service",
    "docker:stop": "docker stop epub-extractor-service && docker rm epub-extractor-service",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "deploy:ecs": "chmod +x quick-deploy-ecs.sh && ./quick-deploy-ecs.sh",
    "deploy:manual": "chmod +x deploy.sh && ./deploy.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.0",
    "epub-parser": "^0.2.5",
    "node-stream-zip": "^1.15.0",
    "axios": "^1.6.2",
    "mime": "^4.0.1",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": ["epub", "parser", "supabase", "express"],
  "author": "Click-Reader Team",
  "license": "MIT"
}